<Window x:Class="UCL_N2.AddSubjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UCL_N2"
        mc:Ignorable="d"
        Title="AddSubjectWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="GridCadastros"
          ItemsSource="{Binding materias}"
          AutoGenerateColumns="False"
          IsReadOnly="False"
          Margin="0,101,0,10">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Id"
                            Binding="{Binding Id}"
                            IsReadOnly="True"
                            Width="60" />

                <DataGridTextColumn Header="Titulo"
                            Binding="{Binding Titulo}"
                            IsReadOnly="True"
                            Width="*" />
                <DataGridTextColumn Header="Professor"
                            Binding="{Binding Professor}"
                            IsReadOnly="True"
                            Width="*" />
                <DataGridTextColumn Header="Turma"
                            Binding="{Binding Turma}"
                            IsReadOnly="True"
                            Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="Input" HorizontalAlignment="Left" Margin="96,10,0,0" TextWrapping="Wrap" FontSize="16" VerticalAlignment="Top" Width="269" Height="26" TextAlignment="Justify"/>
        <Button Content="Adicionar" HorizontalAlignment="Left" Margin="729,44,0,0" VerticalAlignment="Top" Height="26" FontSize="16" Click="OnPressAdd"/>
        <Button Content="Logout" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Height="26" FontSize="16" Click="OnLogout"/>
        <TextBox x:Name="Input_Copy" HorizontalAlignment="Left" Margin="96,57,0,0" TextWrapping="Wrap" FontSize="16" VerticalAlignment="Top" Width="269" Height="26" TextAlignment="Justify"/>

    </Grid>
</Window>
