<Window x:Class="UCL_N2.SubjectSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UCL_N2"
        mc:Ignorable="d"
        Title="SubjectSelectWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="MateriasDropDown" HorizontalAlignment="Center" Margin="0,222,0,0" VerticalAlignment="Top" Width="362" Height="54" FontSize="19"/>
        <TextBlock HorizontalAlignment="Center" Text="Selecione a materia e turma que deseja ver / alterar:" TextAlignment="Center" Margin="0,163,0,0" VerticalAlignment="Top" Height="54" FontSize="25"/>
        <Button HorizontalAlignment="Center" Margin="0,240,0,0" VerticalAlignment="Center" Width="200" Height="54" FontSize="19" Content="Prosseguir" Click="OnProceed"/>
        <Button HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="73" FontSize="19" Content="Logout" Click="OnLogout"/>

    </Grid>
</Window>
